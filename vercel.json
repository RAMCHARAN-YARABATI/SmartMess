{
  "builds": [
    {
      "src": "Smart_Meal_Management_System/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "50mb", "runtime": "python3.9" }
    },
    {
      "src": "build.sh",
      "use": "@vercel/static-build",
      "config": { "distDir": "staticfiles_build" }
    }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/(.*)", "dest": "Smart_Meal_Management_System/wsgi.py" }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "Smart_Meal_Management_System.settings",
    "DEBUG": "False",
    "EMAIL_HOST_USER": "noreplymymessbooking@gmail.com"
  }
}
